<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="top250Item"
            type="cn.sn.zwcx.mvvm.bean.douban.child.Subjects"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/item_touch_bg"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fragment_top_movie_item_icon"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:transitionName="@string/transition_movie_img"
                app:setGankIoItemIcon="@{top250Item.images.small}"
                tools:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@{top250Item.title}"
                android:textSize="12sp"
                android:textColor="@color/colorTitle"
                tools:text="肖申克的救赎"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/colorTitle"
                app:setRating="@{top250Item.rating.average}"
                tools:text="评分：9.8"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>

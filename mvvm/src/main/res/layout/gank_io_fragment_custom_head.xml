<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPageBg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gank_io_custom_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_vector_head_vertical_line"
            android:gravity="center_vertical"
            android:text="@string/all_str"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/gank_io_custom_classify_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/gank_io_fragment_custom_classify"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_vector_head_classify"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/selected_classify"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>
</layout>

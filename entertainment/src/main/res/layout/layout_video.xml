<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:src="@drawable/video" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="25dp"
        android:text="@string/str_video"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/tx_video_allcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="192dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tx_video_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@+id/tx_video_allcount"
        android:textColor="#3495D9"
        android:textSize="20dp"
        android:visibility="gone" />

    <cn.sn.zwcx.entertainment.MyScrollView
        android:layout_width="1026dp"
        android:layout_height="513dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="85dp"
        android:descendantFocusability="afterDescendants" >

        <cn.sn.zwcx.entertainment.MyGridLayout
            android:id="@+id/gv_shortcut_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:columnCount="6"
            android:descendantFocusability="afterDescendants"
            android:orientation="horizontal"
            android:rowCount="20" />
    </cn.sn.zwcx.entertainment.MyScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/line"
        android:visibility="gone" />

    <ImageView
        android:layout_width="414dp"
        android:layout_height="104dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="616dp"
        android:src="@drawable/prompt_video"
        android:visibility="gone" />

</RelativeLayout>
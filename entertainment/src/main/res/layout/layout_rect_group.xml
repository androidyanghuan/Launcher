<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_rect_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.sn.zwcx.entertainment.MyRelativeLayout
        android:id="@+id/layout_video"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="64dp"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/img_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/img_video" />
    </cn.sn.zwcx.entertainment.MyRelativeLayout>

    <cn.sn.zwcx.entertainment.MyRelativeLayout
        android:id="@+id/layout_apps"
        android:layout_width="478dp"
        android:layout_height="230dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:layout_toEndOf="@id/layout_video"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/img_apps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/img_apps" />

    </cn.sn.zwcx.entertainment.MyRelativeLayout>

    <cn.sn.zwcx.entertainment.MyRelativeLayout
        android:id="@+id/layout_entertainment"
        android:layout_width="478dp"
        android:layout_height="230dp"
        android:layout_below="@id/layout_video"
        android:layout_marginStart="65dp"
        android:layout_marginTop="4dp"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <ImageView
            android:id="@+id/img_entertainment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/img_entertainment" />
    </cn.sn.zwcx.entertainment.MyRelativeLayout>

    <cn.sn.zwcx.entertainment.MyRelativeLayout
        android:id="@+id/layout_speed_test"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:layout_below="@id/layout_apps"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/layout_entertainment"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/img_speed_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/img_speed_test" />

    </cn.sn.zwcx.entertainment.MyRelativeLayout>

    <cn.sn.zwcx.entertainment.MyRelativeLayout
        android:id="@+id/layout_local"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:layout_below="@id/layout_video"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/layout_speed_test"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/img_local"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/img_local" />

    </cn.sn.zwcx.entertainment.MyRelativeLayout>

    <cn.sn.zwcx.entertainment.MyRelativeLayout
        android:id="@+id/layout_setting"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:layout_alignTop="@id/layout_apps"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/layout_apps"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_setting" />

    </cn.sn.zwcx.entertainment.MyRelativeLayout>

    <LinearLayout
        android:id="@+id/ll_state"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="11dp">

        <ImageView
            android:id="@+id/wifisetting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/wifi"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/ethsetting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ethernet"
            android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginStart="750dp"
        android:layout_toEndOf="@+id/ll_state"
        android:gravity="center">

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>